@model SDSDWorkOrder.Models.WorkOrders
@{
    ViewData["Title"] = "AddWorkOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Work Order Form</h3>

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                @*<div class="col-lg-5 d-none d-lg-block bg-register-image">
                    </div>*@
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">create a new work order</h1>
                            <h3 class="mb-4">@ViewBag.RandomNumber</h3>
                        </div>
                        <form class="user">
                            <div class="form-group row">

                                <div class="col-sm-6">
                                  
                                    <select asp-for="ClientId" class="form-control" asp-items="ViewBag.Clients">
                                        <option selected>...Choose Client...</option>
                                    </select>
                                    <span asp-validation-for="ClientId"></span>
                                </div>

                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <select asp-for="Country" class="form-control" asp-items="Html.GetEnumSelectList<Country>()">
                                        <option selected>...Select Location...</option>
                                    </select>


                                    <span asp-validation-for="Country"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                 <input type="text" asp-for="Details" class="form-control" placeholder=" Work Order Title ">
                                    <span asp-validation-for="Details"></span>
                                </div>
                                <div class="col-sm-6  mb-3 mb-sm-0">

                                    
                                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
                                            <option selected>...Choose Product...</option>
                                        </select>
                                        <span asp-validation-for="ProductId"></span>
                                    
                                </div>
                                <div class="col-sm-12 mt-3 mb-sm-0">
                                 <textarea type="text" asp-for="Description" class="form-control " placeholder="Work Order Description"></textarea>
                                    <span asp-validation-for="Description"></span>
                                </div>

                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="AnnualFDHAllowance"></label>
                                    <input type="text" asp-for="AnnualFDHAllowance" class="form-control" placeholder="e.g 100/hrs">

                                    <span asp-validation-for="AnnualFDHAllowance"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="AnnualFDHBalance"></label>
                                    <input type="text" asp-for="AnnualFDHBalance" class="form-control" placeholder="e.g 100/hrs">

                                    <span asp-validation-for="AnnualFDHBalance"></span>
                                </div>
                                
                            </div>
                          
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="CreatedDate"></label>
                                    <input asp-for="CreatedDate" type="date" class="form-control">

                                    <span asp-validation-for="CreatedDate"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="EstimatedDeliveryDate"></label>
                                    <input asp-for="EstimatedDeliveryDate" type="date" class="form-control">

                                    <span asp-validation-for="EstimatedDeliveryDate"></span>
                                </div>

                             
                            </div>
          
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="TimeChargeable"></label>
                                    <input asp-for="TimeChargeable" type="text" placeholder="e.g 100/hrs" class="form-control">

                                    <span asp-validation-for="TimeChargeable"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="AccountManager"></label>
                                    <select asp-for="AccountManager" class="form-control" asp-items="Html.GetEnumSelectList<AccountManager>()">
                                        <option selected>...Choose Account Manager...</option>
                                    </select>
                                    <span asp-validation-for="AccountManager"></span>
                                </div>

                            </div>
                        
                            <input type="submit" class="btn btn-primary btn-user btn-block" value="submit" />



                            <hr>
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>