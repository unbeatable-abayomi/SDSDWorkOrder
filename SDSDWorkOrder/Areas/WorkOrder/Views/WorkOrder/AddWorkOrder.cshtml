@model SDSDWorkOrder.Models.ViewModels.WorkOrderViewModel
@{
    ViewData["Title"] = "AddWorkOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Work Order Form</h3>

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                @*<div class="col-lg-5 d-none d-lg-block bg-register-image">
                    </div>*@
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">create a new work order</h1>
                            <h3 class="mb-4">@ViewBag.RandomNumber</h3>
                        </div>
                        <form method="post" asp-action="AddWorkOrder">
                            <div class="form-group row">

                                <div class="col-sm-6">

                                    <select asp-for="@Model.WorkOrders.ClientId" class="form-control" asp-items="ViewBag.Clients">
                                        <option selected>...Choose Client...</option>
                                    </select>
                                    <span asp-validation-for="@Model.WorkOrders.ClientId" class="text-danger"></span>
                                </div>

                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <select asp-for="@Model.WorkOrders.Country" class="form-control" asp-items="Html.GetEnumSelectList<Country>()">
                                        <option selected>...Select Location...</option>
                                    </select>


                                    <span asp-validation-for="@Model.WorkOrders.Country"  class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" asp-for="@Model.WorkOrders.Details" class="form-control" placeholder=" Work Order Title ">
                                    <span asp-validation-for="@Model.WorkOrders.Details"  class="text-danger"></span>
                                </div>
                                <div class="col-sm-6  mb-3 mb-sm-0">


                                    <select asp-for="@Model.WorkOrders.ProductId" class="form-control" asp-items="ViewBag.Products">
                                        <option selected>...Choose Product...</option>
                                    </select>
                                    <span asp-validation-for="@Model.WorkOrders.ProductId"  class="text-danger"></span>

                                </div>
                                <div class="col-sm-12 mt-3 mb-sm-0">
                                    <textarea type="text" asp-for="@Model.WorkOrders.Description" class="form-control " placeholder="Work Order Description"></textarea>
                                    <span asp-validation-for="@Model.WorkOrders.Description"  class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.WorkOrders.AnnualFDHAllowance"></label>
                                    <input type="text" asp-for="@Model.WorkOrders.AnnualFDHAllowance" class="form-control" placeholder="e.g 100/hrs">

                                    <span asp-validation-for="@Model.WorkOrders.AnnualFDHAllowance"  class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.WorkOrders.AnnualFDHBalance"></label>
                                    <input type="text" asp-for="@Model.WorkOrders.AnnualFDHBalance" class="form-control" placeholder="e.g 100/hrs">

                                    <span asp-validation-for="@Model.WorkOrders.AnnualFDHBalance"  class="text-danger"></span>
                                </div>

                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.WorkOrders.CreatedDate"></label>
                                    <input asp-for="@Model.WorkOrders.CreatedDate" type="date" class="form-control">

                                    <span asp-validation-for="@Model.WorkOrders.CreatedDate"  class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.WorkOrders.EstimatedDeliveryDate"></label>
                                    <input asp-for="@Model.WorkOrders.EstimatedDeliveryDate" type="date" class="form-control">

                                    <span asp-validation-for="@Model.WorkOrders.EstimatedDeliveryDate"  class="text-danger"></span>
                                </div>


                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.WorkOrders.TimeChargeable"></label>
                                    <input asp-for="@Model.WorkOrders.TimeChargeable" type="text" placeholder="e.g 100/hrs" class="form-control">

                                    <span asp-validation-for="@Model.WorkOrders.TimeChargeable"  class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.WorkOrders.AccountManager"></label>
                                    <select asp-for="@Model.WorkOrders.AccountManager" class="form-control" asp-items="Html.GetEnumSelectList<AccountManager>()">
                                        <option selected>...Choose Account Manager...</option>
                                    </select>
                                    <span asp-validation-for="@Model.WorkOrders.AccountManager" class="text-danger"></span>
                                </div>

                            </div>

                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Create" />


                            <hr>
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>