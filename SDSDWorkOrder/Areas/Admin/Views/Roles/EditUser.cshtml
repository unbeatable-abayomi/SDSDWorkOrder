@model SDSDWorkOrder.Models.ApplicationUser
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form id="account" method="post" asp-controller="Roles" asp-action="EditUser">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <h1 class="h4 text-gray-900 mb-4">Login</h1>
                                    </div>
                                    <form id="account" method="post" class="user">
                                        <div class="form-group">
                                            <input asp-for="FullName" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">                        <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                       

                                        <div class="form-group">
                                            <input type="submit" value="Update" class="btn btn-primary btn-user btn-block" />
                                           
                                        </div>

                                        <hr>
                                    </form>
                                    <hr>
                                    <div class="text-center">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




