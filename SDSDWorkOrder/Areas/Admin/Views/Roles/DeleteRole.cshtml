@model SDSDWorkOrder.Models.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "DeleteRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Are you sure you want to delete this Role " @Html.DisplayFor(model => model.RoleName) ? " </h5>
<div>

    <hr />
    <dl class="row">

        <dd class="col-sm-10">
          Delete  @Html.DisplayFor(model => model.RoleName)
        </dd>
    </dl>

    <form asp-action="DeleteRole" asp-controller="Roles">
        <input type="hidden" asp-route-Id="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="AllRole" asp-controller="Roles" class="btn btn-primary">Cancel</a>
    </form>
</div>
