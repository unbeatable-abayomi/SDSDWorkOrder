@model SDSDWorkOrder.Models.ApplicationRole



@{
    ViewData["Title"] = "Roles";
}
<form class="container" method="post" asp-controller="Roles" asp-action="CreateRole">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Creat a new Role</h1>
                                </div>
                                
                                    <div class="col-sm-12">
                                        <label asp-for="RoleName" class="control-label"></label>
                                        <input asp-for="RoleName" class="form-control" />
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                    <br />
                                        <input type="submit" value="Create Role" class="btn btn-primary btn-user btn-block" />
                                      
                                    <hr>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>










